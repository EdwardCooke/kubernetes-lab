#cloud-config

users:
  - name: edward
    gecos: Edward Cooke
    ssh_authorized_keys:
    - ssh-rsa  edward@kubernetes
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    groups: sudo
    shell: /bin/bash
    passwd: $6$ZCyTJ6px$wRmt8SvGuMLr2GiFnGcHVD/viAVADapuwsUlhtYRw2c/nwHOT3KnTKRbPjGy8by0bj5bQn8U7scPn.jLpqL.h/
    lock_passwd: false
    
timezone: US/Mountain
package_upgrade: true
packages:
- ca-certificates
- haproxy
write_files:
- owner: root:root
  path: /etc/haproxy/haproxy.cfg
  content: |
    global
        log stdout format raw local0 info
        stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
        stats timeout 30s
        nbthread 4
        ca-base /etc/ssl/certs
        crt-base /etc/ssl/private
        ssl-default-bind-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS
        ssl-default-bind-options no-sslv3
        
    listen stats
        bind :1936
        mode http
        log global
        stats enable
        stats refresh 30s
        stats show-node
        stats uri /haproxy?stats
        http-request use-service prometheus-exporter if { path /metrics }
        timeout connect 5000
        timeout client  50000
        timeout server  50000

    backend kubernetes-controlplane
        mode tcp
        server kube1cp1 kube1cp1.k8s.lan:6443 check
        server kube1cp2 kube1cp2.k8s.lan:6443 check
        server kube1cp3 kube1cp3.k8s.lan:6443 check
        timeout connect 5000
        timeout server  50000

    frontend controlplane-in
        bind :6443
        mode tcp
        default_backend kubernetes-controlplane
        timeout client  50000
    